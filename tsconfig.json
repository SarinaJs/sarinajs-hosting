{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"outDir": "dist",
		"declaration": true,
		"removeComments": true,
		"noLib": false,
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowJs": true,
		"skipLibCheck": true,
		"incremental": true,
		"lib": ["es7"],
		"baseUrl": "./",
		"moduleResolution": "node",
		"typeRoots": ["node_modules/@types"],
		"paths": {
			"@sarina/hosting": ["./src/index.ts"],
			"@sarina/hosting/*": ["./src/*"]
		}
	},
	"files": ["./node_modules/@types/node/index.d.ts"],
	"include": ["./src/**/*.ts", "./test/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
